<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/dark_gray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/calculTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:layout_gravity="end"
            android:paddingRight="12dp"
            android:paddingLeft="12dp"
            android:textAlignment="textEnd"/>

        <TextView
            android:id="@+id/resultTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:layout_gravity="end"
            android:paddingRight="12dp"
            android:paddingLeft="12dp"
            android:textAlignment="textEnd"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:text="C"
                android:backgroundTint="@color/red"
                android:textSize="@dimen/textSize"
                android:onClick="clearAll"/>


            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/purple_500"
                android:background="@android:color/transparent"
                android:text="/"
                android:textSize="@dimen/textSize"
                android:onClick="addDivide"/>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:text="7"
                android:textSize="@dimen/textSize"
                android:onClick="addSeven"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:background="@android:color/transparent"
                android:text="8"
                android:textSize="@dimen/textSize"
                android:onClick="addEight"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:background="@android:color/transparent"
                android:text="9"
                android:textSize="@dimen/textSize"
                android:onClick="addNine" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/purple_500"
                android:background="@android:color/transparent"
                android:text="X"
                android:textSize="@dimen/textSize"
                android:id="@+id/multiplyButton"
                android:onClick="addMultiply"
                />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:background="@android:color/transparent"
                android:text="4"
                android:onClick="addFour"
                android:textSize="@dimen/textSize"
                />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:background="@android:color/transparent"
                android:text="5"
                android:textSize="@dimen/textSize"
                android:onClick="addFive"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:background="@android:color/transparent"
                android:text="6"
                android:textSize="@dimen/textSize"
                android:onClick="addSix"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/purple_500"
                android:background="@android:color/transparent"
                android:text="-"
                android:textSize="@dimen/textSize"
                android:onClick="addMinus"/>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:background="@android:color/transparent"
                android:text="1"
                android:textSize="@dimen/textSize"
                android:onClick="addOne"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:background="@android:color/transparent"
                android:text="2"
                android:textSize="@dimen/textSize"
                android:onClick="addTwo"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:background="@android:color/transparent"
                android:text="3"
                android:onClick="addThree"
                android:textSize="@dimen/textSize"
                />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/purple_500"
                android:background="@android:color/transparent"
                android:text="+"
                android:textSize="@dimen/textSize"
                android:onClick="addPlus"/>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:background="@android:color/transparent"
                android:text="."
                android:textSize="@dimen/textSize"
                android:onClick="addDot"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:background="@android:color/transparent"
                android:text="0"
                android:textSize="@dimen/textSize"
                android:onClick="addZero"/>

            <Button
                android:id="@+id/equalButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:textColor="@color/white"
                android:text="="
                android:textSize="@dimen/textSize"
                android:onClick="makeOperation" />



        </LinearLayout>

    </LinearLayout>

    </LinearLayout>